<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:browse="clr-namespace:AngorApp.Sections.Browse"
             xmlns:designTime="clr-namespace:Zafiro.Avalonia.DesignTime;assembly=Zafiro.Avalonia"
             xmlns:lk="clr-namespace:AngorApp.Sections.Browse.ProjectLookup"
             xmlns:a="clr-namespace:AngorApp.UI.Controls"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             xmlns:av="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="AngorApp.Sections.Browse.BrowseSectionView"
             x:DataType="browse:IBrowseSectionViewModel">

    <Design.DataContext>
        <browse:BrowseSectionViewModelDesign IsBusy="{designTime:Return True}" />
    </Design.DataContext>

    <UserControl.Styles>

        <Style Selector="TextBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="{StaticResource Level3}" />
        </Style>

    </UserControl.Styles>

    <a:PageContainer>
        <DockPanel>

            <Card Header="Browse" Subheader="Browse Projects" DockPanel.Dock="Top">
                <Card.HeaderStartContent>
                    <ui:Icon Source="svg:/Assets/browse.svg" />
                </Card.HeaderStartContent>
            </Card>

            <Card Header="Project lookup" Padding="20 0 20 20" DockPanel.Dock="Top">
                <Card.Subheader>
                    <TextBlock TextWrapping="Wrap">You can look for a project directly by entering its <Bold>Project Id</Bold> here</TextBlock>
                </Card.Subheader>
                <lk:ProjectLookupView DataContext="{Binding ProjectLookupViewModel}" />
            </Card>

            <Loading IsLoading="{Binding IsLoading^}">
                <a:CardGrid Padding="10" ItemsSource="{Binding Projects}" ColumnSpacing="15" RowSpacing="15">
                    <a:CardGrid.ItemTemplate>
                        <DataTemplate DataType="browse:IProjectViewModel">
                            <OverlayBorder Padding="0" Theme="{StaticResource CardOverlayBorder}">
                                <Grid RowDefinitions="180 Auto Auto *">
                                    <Panel>
                                        <av:AdvancedImage Stretch="UniformToFill" Source="{Binding Project.Picture}" />
                                        <Panel VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                            <av:AdvancedImage Width="80" CornerRadius="40" Stretch="UniformToFill"
                                                               Margin="10" Height="80" Source="{Binding Project.Banner}" />
                                            <Border CornerRadius="40" Width="80" Height="80" BorderBrush="White" BorderThickness="4" />
                                        </Panel>
                                    </Panel>
                                    <StackPanel Spacing="10" Grid.Row="1" Margin="15">
                                        <TextBlock Classes="SizeBig" TextAlignment="Center" TextWrapping="Wrap" Grid.Row="1" Text="{Binding Project.Name}" />
                                        <TextBlock ToolTip.Tip="{Binding $self.Text}" TextTrimming="CharacterEllipsis" TextAlignment="Center" TextWrapping="Wrap" MaxLines="4" Grid.Row="2" Text="{Binding Project.ShortDescription}" />
                                    </StackPanel>
                                </Grid>

                                <Interaction.Behaviors>
                                    <TappedTrigger>
                                        <InvokeCommandAction Command="{Binding GoToDetails}" />
                                    </TappedTrigger>
                                </Interaction.Behaviors>

                            </OverlayBorder>
                        </DataTemplate>
                    </a:CardGrid.ItemTemplate>
                </a:CardGrid>
            </Loading>

        </DockPanel>

    </a:PageContainer>

</UserControl>