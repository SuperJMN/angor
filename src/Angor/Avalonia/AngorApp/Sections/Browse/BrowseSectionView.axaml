<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:browse="clr-namespace:AngorApp.Sections.Browse"
             xmlns:designTime="clr-namespace:Zafiro.Avalonia.DesignTime;assembly=Zafiro.Avalonia"
             xmlns:lk="clr-namespace:AngorApp.Sections.Browse.ProjectLookup"
             xmlns:a="clr-namespace:AngorApp.UI.Controls"
             xmlns:controls1="clr-namespace:Zafiro.Avalonia.Controls;assembly=Zafiro.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="500"
             x:Class="AngorApp.Sections.Browse.BrowseSectionView"
             x:DataType="browse:IBrowseSectionViewModel">

    <Design.DataContext>
        <browse:BrowseSectionViewModelDesign IsBusy="{designTime:Return True}" />
    </Design.DataContext>

    <UserControl.Styles>

        <Style Selector="TextBox">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="{StaticResource Level3}" />
        </Style>

    </UserControl.Styles>

    <a:PageContainer>
        <StackPanel Spacing="20">

            <a:Pane Title="Browse" IsTitleVisible="True" Subtitle="Browse Projects">
                <a:Pane.TitleIcon>
                    <i:Icon Value="fa-wallet" />
                </a:Pane.TitleIcon>
            </a:Pane>

            <a:Pane>
                <lk:ProjectLookupView DataContext="{Binding ProjectLookupViewModel}" />
            </a:Pane>

            <controls1:Loading IsLoading="{Binding IsLoading^}">
                <a:CardGrid ItemsSource="{Binding Projects}" Margin="-15  0 -5 0">
                    <a:CardGrid.ItemTemplate>
                        <DataTemplate DataType="browse:IProjectViewModel">
                            <a:Pane Margin="20" IsHeaderVisible="True" MaxHeight="600"
                                           HeaderBackground="{Binding Project.Picture}"
                                           HeaderIcon="{Binding Project.Banner}"
                                           Title="{Binding Project.Name}"
                                           IsTitleVisible="True">
                                <a:Pane.TitleIcon>
                                    <i:Icon Value="fa-wallet" FontSize="20" />
                                </a:Pane.TitleIcon>
                                <DockPanel>
                                    <a:IconButton DockPanel.Dock="Bottom" Command="{Binding GoToDetails}" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" Content="VIEW PROJECT">
                                        <a:IconButton.Icon>
                                            <i:Icon Value="fa-folder" />
                                        </a:IconButton.Icon>
                                    </a:IconButton>
                                    <Separator DockPanel.Dock="Bottom" Margin="0 10" />
                                    <TextBlock Margin="0 20" MaxLines="3" TextWrapping="Wrap" Text="{Binding Project.ShortDescription}" TextTrimming="CharacterEllipsis" />
                                </DockPanel>
                            </a:Pane>
                        </DataTemplate>
                    </a:CardGrid.ItemTemplate>
                </a:CardGrid>
            </controls1:Loading>

            <a:IconButton Command="{Binding OpenHub}" Padding="20 10" Background="#A8C4C9" HorizontalAlignment="Center" Content="ANGOR HUB">
                <a:IconButton.Icon>
                    <i:Icon Value="fa-magnifying-glass" />
                </a:IconButton.Icon>
            </a:IconButton>

        </StackPanel>

    </a:PageContainer>

</UserControl>