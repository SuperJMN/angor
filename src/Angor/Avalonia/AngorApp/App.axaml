<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:password="clr-namespace:AngorApp.Model.Wallet.Password;assembly=AngorApp.Model"
             xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             x:Class="AngorApp.App"
             RequestedThemeVariant="Default">

    <Application.Resources>
        <ResourceDictionary>

            <IconDataTemplate x:Key="IconDataTemplate" />

            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="UI/Shared/Controls/Header.axaml" />
                <MergeResourceInclude Source="UI/Shared/Controls/SectionItem.axaml" />
                <MergeResourceInclude Source="UI/Shared/Resources/Icons.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="BigIcon" DataType="x:Object">
                <ContentPresenter Content="{Binding}">
                    <ContentPresenter.DataTemplates>
                        <DataTemplate DataType="ui:Icon">
                            <Viewbox Height="40" Width="40">
                                <ContentControl ContentTemplate="{StaticResource IconDataTemplate}" Content="{Binding }" />
                            </Viewbox>
                        </DataTemplate>
                    </ContentPresenter.DataTemplates>
                </ContentPresenter>
            </DataTemplate>

            <DataTemplate x:Key="HugeIcon" DataType="x:Object">
                <ContentPresenter Content="{Binding}">
                    <ContentPresenter.DataTemplates>
                        <DataTemplate DataType="ui:Icon">
                            <Viewbox Height="80" Width="80">
                                <ContentControl ContentTemplate="{StaticResource IconDataTemplate}" Content="{Binding }" />
                            </Viewbox>
                        </DataTemplate>
                    </ContentPresenter.DataTemplates>
                </ContentPresenter>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <StyleInclude Source="UI/Themes/ClassicTheme.axaml" />
        <StyleInclude Source="avares://Zafiro.Avalonia/Styles.axaml" />
        <StyleInclude Source="avares://Zafiro.Avalonia.Dialogs/Styles.axaml" />
        <StyleInclude Source="UI/Shared/Styles/Styles.axaml" />
        <StyleInclude Source="avares://AsyncImageLoader.Avalonia/AdvancedImage.axaml" />
        <StyleInclude Source="UI/Shared/Controls/Pane.axaml" />
        <StyleInclude Source="UI/Shared/Controls/AmountControl.axaml" />
        <StyleInclude Source="UI/Shared/Controls/List.axaml" />
        <StyleInclude Source="UI/Shared/Controls/IconLabel.axaml" />
        <StyleInclude Source="UI/Shared/Controls/ProjectCard.axaml" />
        <StyleInclude Source="UI/Shared/Controls/Feerate/FeerateSelector.axaml" />
        <StyleInclude Source="UI/Shared/Controls/ErrorSummary.axaml" />
        <StyleInclude Source="UI/Sections/Wallet/CreateAndImport/Steps/SeedWordsGeneration/SeedWordList.axaml" />
        <StyleInclude Source="UI/Shared/Controls/PageContainer.axaml" />
        <StyleInclude Source="UI/Shared/Controls/Badge.axaml" />
        <StyleInclude Source="UI/Shared/Styles/Cards.axaml" />
        <StyleInclude Source="UI/Shared/Styles/TextBox.axaml" />
        <StyleInclude Source="UI/Shared/Styles/OverlayBorder.axaml" />
        <StyleInclude Source="UI/Shared/Styles/CalendarDatePicker.axaml" />
        <StyleInclude Source="UI/Shared/Styles/TextBlock.axaml" />
        <StyleInclude Source="UI/Shared/Styles/ToggleButton.axaml" />
        <StyleInclude Source="UI/Shared/Styles/FlyoutPresenter.axaml" />
        <StyleInclude Source="UI/Shared/Styles/Button.axaml" />
        <StyleInclude Source="UI/Shared/Styles/Automation.axaml" />
        <StyleInclude Source="UI/Shared/Styles/SlimDataGrid.axaml" />
        <StyleInclude Source="UI/Shared/Styles/HeaderedContainer.axaml" />
        <StyleInclude Source="UI/Shared/Styles/EdgePanel.axaml" />
        <StyleInclude Source="UI/Shared/Styles/Border.axaml" />
    </Application.Styles>

    <Application.DataTemplates>
        <!-- TEMPLATE PRIORITY IS IMPORTANT! -->
        <!-- The first template that matches the type will be used, so first templates in this list are checked for a match before the others -->
        <DataTemplate DataType="ui:IIcon">
            <Viewbox Height="{Binding $self.(IconOptions.Size)}" Width="{Binding $self.Width}">
                <ContentControl ContentTemplate="{StaticResource IconDataTemplate}" Content="{Binding }" />
            </Viewbox>
        </DataTemplate>
        <DataTypeViewLocator />
        <DataTemplateInclude Source="avares://Zafiro.Avalonia/DataTemplates.axaml" />
    </Application.DataTemplates>

</Application>
